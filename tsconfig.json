{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": false,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "paths": {
      // For development
      "@mcp-synergy/*": ["./packages/*/src"]
    }
  },
  "exclude": ["node_modules"]
}
