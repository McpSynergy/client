{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "declaration": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "rootDir": "./src",
    "types": ["node", "vitest", "vitest/globals"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "lib", "es"]
}
